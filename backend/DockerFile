# Use Node.js LTS
FROM node:18-alpine

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies
RUN pnpm ci --only=production

# Copy source code
COPY src ./src
COPY prisma ./prisma

# Build TypeScript
RUN pnpm run build

# Generate Prisma Client
RUN npx prisma generate

# Expose port
EXPOSE 8080

# Set production environment
ENV NODE_ENV=production

# Start application
CMD ["node", "dist/server.js"]