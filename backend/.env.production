# ==========================================
# PRODUCTION ENVIRONMENT
# ==========================================

# Server Configuration
NODE_ENV=production
PORT=8080
API_VERSION=v1

# Database (Cloud SQL - Production)
# This should be in Secret Manager
DATABASE_URL=${DATABASE_URL}

# JWT Configuration (From Secret Manager)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRES_IN=30d

# OAuth - Google (Production)
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET}
GOOGLE_CALLBACK_URL=https://api.wecareehr.com/api/v1/auth/google/callback

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@wecareehr.com
SMTP_PASSWORD=${SMTP_PASSWORD}
FROM_EMAIL=noreply@wecareehr.com

# GCP Configuration
GCP_PROJECT_ID=wecareehr-production
GCP_BUCKET_NAME=wecareehr-production-storage

# External APIs (From Secret Manager)
NIN_API_URL=https://api.nimc.gov.ng
NIN_API_KEY=${NIN_API_KEY}

# AI Features (From Secret Manager)
AI_DIAGNOSIS_FUNCTION_URL=${AI_DIAGNOSIS_FUNCTION_URL}
AI_API_KEY=${AI_API_KEY}

# Frontend URL
FRONTEND_URL=https://app.wecareehr.com

# Rate Limiting (Strict)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption (From Secret Manager)
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Logging Level
LOG_LEVEL=info