# ==========================================
# STAGING ENVIRONMENT
# ==========================================

# Server Configuration
NODE_ENV=staging
PORT=8080
API_VERSION=v1

# Database (Cloud SQL - Staging Instance)
# Format: postgresql://USER:PASSWORD@/DATABASE?host=/cloudsql/PROJECT:REGION:INSTANCE
DATABASE_URL="postgresql://postgres:STAGING_PASSWORD@/wecareehr_staging?host=/cloudsql/wecareehr-staging:africa-south1:wecareehr-db-staging"

# JWT Configuration (Use Secret Manager in GCP)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRES_IN=30d

# OAuth - Google (Staging)
GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID_STAGING}
GOOGLE_CLIENT_SECRET=${GOOGLE_CLIENT_SECRET_STAGING}
GOOGLE_CALLBACK_URL=https://api-staging.wecareehr.com/api/v1/auth/google/callback

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging@wecareehr.com
SMTP_PASSWORD=${SMTP_PASSWORD}
FROM_EMAIL=staging@wecareehr.com

# GCP Configuration
GCP_PROJECT_ID=wecareehr-staging
GCP_BUCKET_NAME=wecareehr-staging-storage
# GOOGLE_APPLICATION_CREDENTIALS not needed in Cloud Run (uses Workload Identity)

# External APIs
NIN_API_URL=https://api.nimc.gov.ng
NIN_API_KEY=${NIN_API_KEY_STAGING}

# AI Features
AI_DIAGNOSIS_FUNCTION_URL=${AI_DIAGNOSIS_FUNCTION_URL_STAGING}
AI_API_KEY=${AI_API_KEY_STAGING}

# Frontend URL
FRONTEND_URL=https://staging.wecareehr.com

# Rate Limiting (Standard)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Logging Level
LOG_LEVEL=info